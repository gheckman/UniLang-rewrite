# DESCRIPTION
# This file contains Linux VxSim specific definitions and flags for the ICC
# software generation tools (compiler, assembler, linker etc.).
#*/

CPU		= SIMLINUX
TOOL		= icc
CM		= large

include $(TGT_DIR)/h/tool/icc/defs.icc

CC_OPTIM_XO = -O2
CC_OPTIM_DEBUG =
CC_OPTIM_DRIVER = $(CC_OPTIM_DEBUG) -fvolatile -nostdlib -fno-builtin
CC_OPTIM_NORMAL = $(CC_OPTIM_DEBUG) $(CC_OPTIM_XO) -nostdlib -fno-builtin
CC_OPTIM_TARGET = $(CC_OPTIM_DEBUG) $(CC_OPTIM_XO) -fvolatile -nostdlib -fno-builtin

# Generate code for (-march=) and schedule for (-mtune=) pentium

ifdef _WRS_CONFIG_LP64
CC_ARCH_SPEC	= -m64 -mcmodel=$(CM) -mno-red-zone -fno-implicit-fp-sse \
		  -fno-omit-frame-pointer
LINK_FLAG_EXTRA	= -m elf_x86_64_vxworks
else
CC_ARCH_SPEC	= -mia32 -fno-implicit-fp-sse
endif

TOOLENV		= pentium
VX_CPU_FAMILY	= simlinux
ARCH_DIR	= simlinux
ifdef _WRS_CONFIG_LP64
ABI_SPEC	= x86-64
else
ABI_SPEC        = x86
endif

CF		=

